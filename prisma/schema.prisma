generator client {
  provider = "prisma-client"
  output   = "../src/prisma/generated/prisma"
}

datasource db {
  provider = "postgresql"
  // url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  CREATOR
  ADMIN
}

model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean   @default(false)
  image         String?
  role          UserRole  @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
  sessions      Session[]
  accounts      Account[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

model Invite {
  id        String    @id @default(cuid())
  email     String
  role      UserRole  @default(USER)
  used      Boolean   @default(false)
  usedAt    DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  createdBy String?   // Optional: track who created the invite

  @@unique([email])
  @@map("invite")
}

model CrewMember {
  id          String   @id @default(cuid())
  name        String
  role        String
  instagram   String?
  soundcloud  String?
  image       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("crew_member")
}

model ContentItem {
  id          String   @id @default(cuid())
  type        String
  title       String
  description String
  date        DateTime
  link        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("content_item")
}

model GigTag {
  id        String   @id @default(cuid())
  name      String
  description String?
  color     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  gigTags    GigTagRelationship[]

  @@map("gig_tag")
}

model GigTagRelationship {
  id        String   @id @default(cuid())
  gigId     String
  gigTagId  String
  gig       Gig      @relation(fields: [gigId], references: [id], onDelete: Cascade)
  gigTag    GigTag   @relation(fields: [gigTagId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("gig_tag_relationship")
}

model Gig {
  id           String      @id @default(cuid())
  title        String
  subtitle     String
  description  String?
  gigStartTime DateTime 
  gigEndTime   DateTime?
  ticketLink   String?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  media        GigMedia[]

  gigTags    GigTagRelationship[]

  @@map("gig")
}

model GigMedia {
  id        String   @id @default(cuid())
  gigId     String
  gig       Gig      @relation(fields: [gigId], references: [id], onDelete: Cascade)
  type      String   // "photo" or "video"
  
  // File upload ID (references file_upload.id via for="gig_media", forId=id)
  fileUploadId String?
  url          String?   // Legacy field for backwards compatibility
  
  // Sorting - separate sort orders for featured and gallery sections
  section     String   @default("gallery") // "featured" or "gallery"
  sortOrder   Int      @default(0)         // Sort order within section
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([gigId, section, sortOrder])
  @@index([fileUploadId])
  @@map("gig_media")
}

model MerchItem {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Float
  image       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("merch_item")
}

model ContactSubmission {
  id          String   @id @default(cuid())
  name        String
  email       String
  subject     String
  message     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("contact_submission")
}

model NewsletterSubscription {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  removed   Boolean   @default(false)

  @@map("newsletter_subscription")
}

enum FileUploadStatus {
  NO_FILE
  UPLOADING
  OK
  SOFT_DELETED
  DELETED
  ERRORED
}

enum FileCategory {
  IMAGE
  VIDEO
  AUDIO
  PDF
  DOCUMENT
  FILE
}

model file_upload {
  id        String  @id @unique @default(uuid())
  createdAt DateTime @default(now())

  url String @unique
  key String @unique
  name String
  type String
  size Int
  mimeType String
  acl String @default("private")
  status FileUploadStatus @default(OK)

  category FileCategory @default(FILE)

  // Image/video dimensions (null for non-media files)
  width Int?
  height Int?

  userId String?

  for String 
  forId String

  @@index([url])
  @@index([key])
  @@index([name])
  @@index([type])
  @@index([createdAt])
  @@index([size])
  @@index([for, forId])
}